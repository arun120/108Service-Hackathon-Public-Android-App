<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_activity_to_be_delete_nav_2"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.b2b.home.a108public.Main2Activity"
    tools:showIn="@layout/app_bar_main2">

    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/widgetlayout"
            android:visibility="gone"
            android:layout_height="match_parent"
            >

            <TextView
                android:text="Select Type of Emergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:id="@+id/textView7"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/cancel_online" />
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/myrels1"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="22dp"
                >
                <io.codetail.widget.RevealFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:id="@+id/police_show"
                        android:background="@color/colorAccentProfile"></RelativeLayout>
                </io.codetail.widget.RevealFrameLayout>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/btn_login"
                    android:id="@+id/police_main" />

                <TextView
                    android:text="Police"

                    android:layout_below="@+id/police_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/police_main_text" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/myrels2"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="22dp"
                >

                <io.codetail.widget.RevealFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:id="@+id/ambulance_show"
                        android:background="@color/colorAccentProfile"></RelativeLayout>
                </io.codetail.widget.RevealFrameLayout>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/btn_login"
                    android:id="@+id/ambulance_main" />

                <TextView
                    android:text="Ambulance"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ambulance_main_text"
                    android:layout_below="@+id/ambulance_main"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:id="@+id/myrels3"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="22dp"
                >
                <io.codetail.widget.RevealFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:id="@+id/fire_show"
                        android:background="@color/colorAccentProfile"></RelativeLayout>
                </io.codetail.widget.RevealFrameLayout>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/btn_login"
                    android:id="@+id/fire_main" />

                <TextView
                    android:text="Fire"
                    android:layout_below="@+id/fire_main"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fire_main_text" />

            </RelativeLayout>

            <TextView
                android:text="No. Of People Affected"
                android:layout_below="@+id/myrels1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />
            <Spinner
                android:layout_width="200dp"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="14dp"
                android:layout_height="wrap_content"
                android:id="@+id/number" />

            <Button
                android:text="Send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/submit"
                 />
        </RelativeLayout>
    </io.codetail.widget.RevealFrameLayout>
    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/widgetlayout_offline"
            android:visibility="gone"
            android:layout_height="match_parent"
            >

            <TextView
                android:text="No Internet Connection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:id="@+id/text_noint"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text_noint"
                android:layout_marginTop="22dp"
                android:id="@+id/offrels"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/btn_login"
                     />


            </RelativeLayout>


            <Button
                android:text="SendSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/sms"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/offrels"
                />

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/cancel_offline" />
        </RelativeLayout>
    </io.codetail.widget.RevealFrameLayout>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.b2b.home.a108public.Sample_maps" />

</LinearLayout>





